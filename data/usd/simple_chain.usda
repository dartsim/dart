#usda 1.0
(
    metersPerUnit = 1
    upAxis = "Y"
)

def Xform "Scene"
{
    def PhysicsScene "physics"
    {
        float3 physics:gravityDirection = (0, -1, 0)
        float physics:gravityMagnitude = 9.81
    }

    def Xform "SimpleArm" (
        prepend apiSchemas = ["UsdPhysicsArticulationRootAPI"]
    )
    {
        def Xform "base" (
            prepend apiSchemas = ["UsdPhysicsRigidBodyAPI", "UsdPhysicsMassAPI"]
        )
        {
            double3 xformOp:translate = (0, 0.5, 0)
            uniform token[] xformOpOrder = ["xformOp:translate"]
            float physics:mass = 5
            float3 physics:diagonalInertia = (0.1, 0.1, 0.1)
        }

        def Xform "link" (
            prepend apiSchemas = ["UsdPhysicsRigidBodyAPI", "UsdPhysicsMassAPI"]
        )
        {
            double3 xformOp:translate = (0, 1.1, 0)
            uniform token[] xformOpOrder = ["xformOp:translate"]
            float physics:mass = 3
            float3 physics:diagonalInertia = (0.05, 0.05, 0.05)
        }

        def PhysicsRevoluteJoint "shoulder"
        {
            rel physics:body0 = </Scene/SimpleArm/base>
            rel physics:body1 = </Scene/SimpleArm/link>
            point3f physics:localPos0 = (0, 0.3, 0)
            point3f physics:localPos1 = (0, -0.3, 0)
            quatf physics:localRot0 = (1, 0, 0, 0)
            quatf physics:localRot1 = (1, 0, 0, 0)
            float3 physics:axis = (0, 0, 1)
            float physics:lowerLimit = -1.5707964
            float physics:upperLimit = 1.5707964
        }
    }
}
